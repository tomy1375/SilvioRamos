---
import { ViewTransitions } from 'astro:transitions';
import '../styles/globals.css';
import ThemeToggle from '../components/ThemeToggle';

interface Props {
title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title} - IngeCivil</title>
  <ViewTransitions />
  <script>
    // Script para inicializar el tema
    const savedTheme = localStorage.getItem("theme");
    const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
    
    if (savedTheme === "dark" || (!savedTheme && prefersDark)) {
      document.documentElement.classList.add("dark");
    } else {
      document.documentElement.classList.remove("dark");
    }
  </script>
</head>
<body class="min-h-screen flex flex-col">
  <header class="border-b">
    <div class="container flex h-16 items-center justify-between px-4 md:px-6">
      <a href="/" class="flex items-center gap-2 font-bold text-xl">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6">
          <path d="M3 9h18v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V9Z"></path>
          <path d="M3 9V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v4"></path>
        </svg>
        <span>S.M.R.</span>
      </a>
      <nav class="hidden md:flex gap-6">
        <a href="/" class="nav-link text-sm font-medium">
          Inicio
        </a>
        <a href="/equipo" class="nav-link text-sm font-medium">
          Equipo
        </a>
        <a href="/proyectos" class="nav-link text-sm font-medium">
          Proyectos
        </a>
        <a href="/contacto" class="nav-link text-sm font-medium">
          Contacto
        </a>
      </nav>
      <div class="flex items-center gap-4">
        <ThemeToggle client:load />
        <a href="/login" class="inline-flex h-9 items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50">
          Acceso Clientes
        </a>
        <button class="md:hidden">
          <span class="sr-only">Toggle Menu</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6"
          >
            <line x1="4" x2="20" y1="12" y2="12" />
            <line x1="4" x2="20" y1="6" y2="6" />
            <line x1="4" x2="20" y1="18" y2="18" />
          </svg>
        </button>
      </div>
    </div>
  </header>
  <main class="flex-1">
    <slot />
  </main>
  <footer class="border-t">
    <div class="container flex flex-col gap-4 py-10 md:flex-row md:gap-8 md:py-12">
      <div class="flex-1 space-y-4">
        <div class="flex items-center gap-2 font-bold text-xl">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6">
            <path d="M3 9h18v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V9Z"></path>
            <path d="M3 9V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v4"></path>
          </svg>
          <span>IngeCivil</span>
        </div>
        <p class="text-sm text-muted-foreground">
          Soluciones de ingeniería civil profesionales y confiables.
        </p>
      </div>
      <div class="grid flex-1 grid-cols-2 gap-8 sm:grid-cols-3">
        <div class="space-y-3">
          <h3 class="text-sm font-medium">Empresa</h3>
          <ul class="space-y-2 text-sm">
            <li>
              <a href="/equipo" class="text-muted-foreground hover:text-foreground">
                Equipo
              </a>
            </li>
            <li>
              <a href="/proyectos" class="text-muted-foreground hover:text-foreground">
                Proyectos
              </a>
            </li>
            <li>
              <a href="/contacto" class="text-muted-foreground hover:text-foreground">
                Contacto
              </a>
            </li>
          </ul>
        </div>
        <div class="space-y-3">
          <h3 class="text-sm font-medium">Servicios</h3>
          <ul class="space-y-2 text-sm">
            <li>
              <a href="/servicios/diseno" class="text-muted-foreground hover:text-foreground">
                Diseño Estructural
              </a>
            </li>
            <li>
              <a href="/servicios/gestion" class="text-muted-foreground hover:text-foreground">
                Gestión de Proyectos
              </a>
            </li>
            <li>
              <a href="/servicios/topografia" class="text-muted-foreground hover:text-foreground">
                Topografía
              </a>
            </li>
          </ul>
        </div>
        <div class="space-y-3">
          <h3 class="text-sm font-medium">Legal</h3>
          <ul class="space-y-2 text-sm">
            <li>
              <a href="/privacidad" class="text-muted-foreground hover:text-foreground">
                Política de Privacidad
              </a>
            </li>
            <li>
              <a href="/terminos" class="text-muted-foreground hover:text-foreground">
                Términos de Servicio
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="border-t py-6">
      <div class="container flex flex-col items-center justify-between gap-4 md:flex-row">
        <p class="text-center text-sm text-muted-foreground md:text-left">
          © {new Date().getFullYear()} IngeCivil. Todos los derechos reservados.
        </p>
        <div class="flex gap-4">
          <a href="#" class="text-muted-foreground hover:text-foreground">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
            </svg>
            <span class="sr-only">Facebook</span>
          </a>
          <a href="#" class="text-muted-foreground hover:text-foreground">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z" />
            </svg>
            <span class="sr-only">Twitter</span>
          </a>
          <a href="#" class="text-muted-foreground hover:text-foreground">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5" />
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5" />
            </svg>
            <span class="sr-only">Instagram</span>
          </a>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>

<style>
  .nav-link {
    position: relative;
    transition: 0.5s ease;
    padding: 0.2em 0.4em;
  }

  .nav-link::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 2px;
    width: 100%; 
    background-color: #3b82f6; /* Blue color */
    transition: 0.5s ease;
    transform: scaleX(0); 
  }

  .nav-link:hover {
    color: #3b82f6; /* Blue color */
    transition-delay: 0.1s;
  }

  .nav-link:hover::before {
    transform: scaleX(1); 
  }

  nav:hover .nav-link:not(:hover) {
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }
</style>

