---
import AdminLayout from '../../layouts/AdminLayout.astro';
import SubirPlanoForm from '../../components/SubirPlanoForm';
---

<AdminLayout title="Subir Plano" activeLink="subir">
  <div class="flex flex-col gap-6">
    <div class="flex flex-col gap-2">
      <h1 class="text-2xl font-bold tracking-tight">Subir Nuevo Plano</h1>
      <p class="text-muted-foreground">
        Suba un nuevo plano para compartir con los clientes.
      </p>
    </div>
    <div class="rounded-lg border shadow-sm p-6">
      <SubirPlanoForm client:load />
    </div>
  </div>
</AdminLayout>

